# Server
PORT=3000

# Redis (token store)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO (S3-compatible)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_PREFIX=files

# Limits
MAX_UPLOAD_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,application/json

# Create app bucket on first use if missing
AUTO_CREATE_BUCKETS=true

# Rate limit: max requests per window for upload-url
RATE_LIMIT_UPLOAD_URL_MAX=30
